.first_tab navigator {
  display: flex;
}
.first_tab navigator .goods_img_wrap {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.first_tab navigator .goods_img_wrap image {
  width: 85%;
}
.first_tab navigator .goods_info_wrap {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.first_tab navigator .goods_info_wrap .goods_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.first_tab navigator .goods_info_wrap .goods_price {
  color: var(--themeColor);
  font-size: 32rpx;
}
